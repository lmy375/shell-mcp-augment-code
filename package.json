{
  "name": "shell-mcp",
  "version": "1.0.0",
  "description": "A MCP Server tool that converts shell commands and REPL sessions into MCP tools",
  "main": "dist/index.js",
  "bin": {
    "shell-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "shell",
    "repl",
    "command-line",
    "ai-tools"
  ],
  "author": "shell-mcp",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.0.0",
    "fastmcp": "^1.0.1",
    "winston": "^3.11.0",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ]
}
